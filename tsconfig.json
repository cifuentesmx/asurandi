{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@asurandi/*": ["packages/*/src"]
      },
      "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "exclude": ["**/node_modules", "**/dist"], 
  }